<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="DiveLog.Views.ItemDetailPage" 
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15" BackgroundColor="{Binding BackgroundColor}">
        <Label Text="Text:" FontSize="Medium" BackgroundColor="{Binding BackgroundColor}"/>
        <Label Text="{Binding Item.Text}" FontSize="Small" BackgroundColor="{Binding BackgroundColor}"/>
        <Label Text="Description:" FontSize="Medium" BackgroundColor="{Binding BackgroundColor}"/>
        <Label Text="{Binding Item.Description}" FontSize="Small" BackgroundColor="{Binding BackgroundColor}"/>
    </StackLayout>
</ContentPage>