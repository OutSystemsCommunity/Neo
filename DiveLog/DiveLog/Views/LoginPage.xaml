<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="DiveLog.Views.LoginPage"
             xmlns:vm="clr-namespace:DiveLog.ViewModels" 
             Title="{Binding Title}" 
             ><!--BackgroundColor="{Binding BackgroundColor}"-->
    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
                <StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center" >
                    <ContentView Padding="0,0,0,0" VerticalOptions="Center" HorizontalOptions="Center" >
                        <Entry Margin="0,10,0,10" 
                               Placeholder="username" 
                               MaxLength="10"
                               x:Name="UsernameEntry"
                               WidthRequest="300"/>
                    </ContentView>
                    <ContentView Padding="0,0,0,0" VerticalOptions="Center" HorizontalOptions="Center">
                        <Entry Margin="0,10,0,10" 
                               Placeholder="password" 
                               MaxLength="10" 
                               IsPassword="true" 
                               x:Name="PasswordEntry"
                               WidthRequest="300"/> 
                    </ContentView>
                    <ContentView Padding="0,0,0,0" VerticalOptions="Center" HorizontalOptions="Center" >
                        <Button Margin="0,0,0,50" 
                                Text="  Login  " 
                                Command="{Binding LoginCommand}" 
                                WidthRequest="300"
                                HeightRequest="70" />
                    </ContentView>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center" >
                        <Switch x:Name="RememberMeSwitch"/><!--TODO Persist this across sessions-->
                        <Label Text="Remember Me"/>
                    </StackLayout>
                </StackLayout>
    </ContentPage.Content>
</ContentPage>
