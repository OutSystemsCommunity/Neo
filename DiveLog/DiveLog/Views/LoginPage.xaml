<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="DiveLog.Views.LoginPage"
             xmlns:vm="clr-namespace:DiveLog.ViewModels" 
             Title="{Binding Title}" 
             BackgroundColor="{Binding BackgroundColor}">
    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <!--Page Level Resources: Compatible with Xamarin Live Player -->
            <Color x:Key="Primary">#2196F3</Color>
            <Color x:Key="Accent">#96d1ff</Color>
            <Color x:Key="LightTextColor">#999999</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="Fill" ><!--shows all around button: BackgroundColor="{StaticResource Primary}"-->
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center" ><!-- doesn't show: BackgroundColor="Green" -->
                    <ContentView Padding="0,40,0,40" VerticalOptions="FillAndExpand" ><!--shows just above and below button: BackgroundColor="Teal"-->
                        <Label VerticalOptions="Center" HeightRequest="64" Text="Login label" BackgroundColor="{StaticResource Primary}" TextColor="Black"/>
                        <Button Margin="0,0,0,0" Text="  Login  " Command="{Binding LoginCommand}" BackgroundColor="{Binding ButtonBackgroundColor}" TextColor="{Binding ButtonTextColor}" />
                    </ContentView>
                </StackLayout>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
